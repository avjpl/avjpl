h1 New Blog Post

form(method='POST', action='/processPost', enctype="multipart/form-data")
    ul
        li Title:
            input#title(type='text', name='title', value='', required, placeholder='Title', autofocus)
        li Image:
             input#img(type='file', name='image', value='', required)
        li Description:
            textarea#desc(name='desc', value='', placeholder='Description', required)
        li Content:
            textarea#content(name='content', value='', placeholder='Content', required)
        li Tags:
            input#tag(type='text', name='tag', placeholder='Tag')
        li
            button(type='submit') Create